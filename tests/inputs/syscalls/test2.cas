
; Create File

MVI R1 0  
STR m[R1] "file.txt"
PSH R1						; Filename

MVI R1 1					; Mode
PSH R1


MVI R1 0					; Open
PSH R1
SYS 

POP R1						; Fd 

; Write
PSH R1

MVI R2 0
STR m[R2] "Hello, world!\n" ; string
PSH R2

MVI R2 14					; size
PSH R2

MVI R2 2 ; write
PSH R2
SYS

POP R0
PSH R1
MVI R2 1 ; Close
PSH R2
SYS 



; OPEN AND READ
MVI R1 3
STR m[R1] "file.txt"
PSH R1

MVI R1 0 ; Read mode
PSH R1

MVI R1 0 ; Open syscall
PSH R1
SYS

POP R1 ; fd
PSH R1

MVI R2 6
PSH R2
MVI R3 14
PSH R3

MVI R3 3 ; Read
PSH R3
SYS
POP R0

; Close
POP R0
PSH R1
MVI R3 1
PSH R3 
SYS

MVI R1 90 
STR m[R1] "file.txt"
PSH R1

MVI R1 4
PSH R1
SYS


; Loop to print

MVI R3 14
MVI R1 0

loop:
CMP R3 R1
JMP.Z end

LOAD R4 m[R2][R1]
PSH R4
OUT

INC R1
JMP loop


end:
END
